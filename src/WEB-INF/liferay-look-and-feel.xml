<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 7.0.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_7_0_0.dtd">

<look-and-feel>
	<compatibility>
		<version>7.0.0+</version>
	</compatibility>
	<theme id="marketing-theme" name="marketing-theme">
		<template-extension>vm</template-extension>
		<settings>
			<setting configurable="true" key="main-message" type="text"  value="Check out this!"/>
			<setting configurable="true" key="submessage" type="text" value="Is it not awesome!"/>
			<setting configurable="true" key="find-pot-more-link" type="text" value="#content" />
			<setting configurable="true" key="header-dark" type="checkbox" value="true" />
			<setting configurable="true" key="header-dark-btn" type="checkbox" value="true" />
			<setting configurable="true" key="show-portlet-names" type="checkbox" value="false" />
		</settings>
	</theme>
</look-and-feel>